@model IEnumerable<web_calendar.BL.ViewModels.DisplayEventViewModel>
@{
    ViewBag.Title = "Events";
}

<h2>My events</h2>

<p>
    @Html.ActionLink("Create new", "Create", "Event")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeBegin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NotificationCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalendarName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeBegin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NotificationCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CalendarName)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", "Event", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit" })
            @Html.ActionLink(" ", "Details", "Event", new { id = item.Id }, new { @class = "glyphicon glyphicon-eye-open" })                                              
            @Html.ActionLink(" ", "Delete", "Event", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove" })
        </td>
    </tr>
}
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}